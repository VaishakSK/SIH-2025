    <div class="grid-layout">
      <aside class="sidebar" aria-label="Sidebar">
        <div class="profile">
          <div class="avatar">{{#if avatarUrl}}<img src="{{avatarUrl}}" alt="Avatar">{{else}}{{#if username}}{{username.[0]}}{{else}}U{{/if}}{{/if}}</div>
          <div class="userMeta">
